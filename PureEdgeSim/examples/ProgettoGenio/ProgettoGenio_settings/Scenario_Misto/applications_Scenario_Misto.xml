<applications>

	<application name="Video Suveillance">
		<type>Normal</type>
		<container>
			<container_size>500000</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
			<container_request_size>750</container_request_size> <!-- La size della request rappresentata in KB -->
			<shared>true</shared> <!-- se il container deve essere usato da pi첫 edge device diversi -->
			<copies>5</copies>
		</container>
        <users_type>[30,1]</users_type> <!--in this case 10 users "1" type-->
		<task>
			<latency>0.2</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>750</request_size> <!-- La size della request rappresentata in KB -->
