<?xml version="1.0"?>
<edge_datacenters>
	<datacenter name="dc1">
		<periphery>true</periphery>
		<idleConsumption>100</idleConsumption>
		<maxConsumption>250</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<location>
			<x_pos>100</x_pos>
			<y_pos>100</y_pos>
		</location>
		<hosts>
			<host>
				<cores>10</cores>
				<mips>2000</mips>
				<ram>64000</ram>
				<storage>1000000</storage>
				<VMs>
					<VM>
						<cores>10</cores>
						<mips>2000</mips>
						<ram>64000</ram>
						<storage>1000000</storage>
					</VM>
				</VMs>
			</host>
		</hosts>
	</datacenter>
	<network_links>
		<!-- To create a topology add links here. See example 3 -->
	</network_links>
</edge_datacenters>