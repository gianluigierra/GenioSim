<applications>

	<application name="Smart Lights">
		<type>Normal</type>
		<rate>2</rate>
		<usage_percentage>80</usage_percentage>
		<container>
			<container_size>20000</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
			<container_request_size>1</container_request_size> <!-- La size della request rappresentata in KB -->
			<shared>false</shared> <!-- se il container deve essere usato da più edge device diversi -->
		</container>
		<task>
			<latency>0.5</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>1</request_size> <!-- La size della request rappresentata in KB -->
			<results_size>10</results_size> <!-- La size del risultato rappresentato in KB -->
			<task_length>500</task_length> <!-- la lunghezza del taks rappresentata in Million Istructions (MI) -->
		</task>
	</application>

	<application name="E-Health">
		<type>Normal</type>
		<rate>60</rate>
		<usage_percentage>20</usage_percentage>
		<container>
			<container_size>100000</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
			<container_request_size>10</container_request_size> <!-- La size della request rappresentata in KB -->
			<shared>true</shared> <!-- se il container deve essere usato da più edge device diversi -->
		</container>
		<task>
			<latency>0.05</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>10</request_size> <!-- La size della request rappresentata in KB -->
			<results_size>10</results_size> <!-- La size del risultato rappresentato in KB -->
			<task_length>1000</task_length> <!-- la lunghezza del taks rappresentata in Million Istructions (MI) -->
		</task>
	</application>

</applications>

