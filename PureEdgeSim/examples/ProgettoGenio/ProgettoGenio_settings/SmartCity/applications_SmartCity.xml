<applications>
	<application name="Smart City">
		<type>Normal</type>
		<rate>10</rate>
		<container>
			<container_size>100</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
			<container_request_size>10</container_request_size> <!-- La size della request rappresentata in KB -->
			<shared>true</shared> <!-- se il container deve essere usato da piÃ¹ edge device diversi -->
			<copies>20</copies>
		</container>
		<users_type>[128,1]</users_type> <!--in this case 10 users "4" type-->
		<task>
			<latency>0.5</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>10</request_size> <!-- La size della request rappresentata in KB -->
			<results_size>100</results_size> <!-- La size del risultato rappresentato in KB -->
			<task_length>500</task_length> <!-- la lunghezza del taks rappresentata in Million Istructions (MI) -->
		</task>
	</application>
</applications>

