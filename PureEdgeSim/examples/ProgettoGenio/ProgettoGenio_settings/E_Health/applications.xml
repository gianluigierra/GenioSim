<applications>

	<application name="DAZN">
		<type>Operator</type>
        <container>
            <container_size>2000000</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
            <container_request_size>10</container_request_size> <!-- La size della request rappresentata in KB -->
            <shared>true</shared> <!-- shared indica quanti device possono usare questo container. In questo caso fino a 5 -->
        </container>
        <users_type>[10,1]</users_type> <!--in this case 10 users "1" type-->
		<task>
			<latency>0.5</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>10</request_size> <!-- La size della request rappresentata in KB -->
			<results_size>10</results_size> <!-- La size del risultato rappresentato in KB -->
			<task_length>1000</task_length> <!-- la lunghezza del taks rappresentata in Million Istructions (MI) -->
		</task>
	</application>

	<application name="Smart Lights">
		<type>IoT</type>
        <container>
            <container_size>10000</container_size> <!-- La size del container rappresentata in KB, 1.000.000 = 1GB -->
            <container_request_size>10</container_request_size> <!-- La size della request rappresentata in KB -->
            <shared>false</shared> <!-- shared indica quanti device possono usare questo container. In questo caso solo il device che lo genera -->
        </container>
        <users_type>[30,2];[30,3]</users_type> <!--in this case 60 users "2" type-->
		<task>
			<latency>0.05</latency> <!-- a great number represents no latency-sensitivity -->
			<request_size>10</request_size> <!-- La size della request rappresentata in KB -->
			<results_size>10</results_size> <!-- La size del risultato rappresentato in KB -->
			<task_length>1000</task_length> <!-- la lunghezza del taks rappresentata in Million Istructions (MI) -->
		</task>
	</application>

</applications>